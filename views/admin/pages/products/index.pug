extends ../../layouts/default
include ../../mixins/filterStatus
include ../../mixins/search
include ../../mixins/alert
block main
    +success(5000)
    +error(5000)
    
    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
            .row
                .col-6
                    +button-status(filterStatus)                   
                .col-6
                    +search(keyword)

    .card.mb-3
        .card-header Danh sách
        .card-body
            .row
                .col-8
                    form(
                        action=`${prefixAdmin}/products/change-multi?_method=PATCH` 
                        method="POST"
                        form-change-multi
                    )
                        .d-flex.align-items-start
                            .form-group
                                select(name="type" class="form-control")
                                    option(disabled selected) Chọn hành động
                                    option(value="active") Hoạt động
                                    option(value="inactive") Dừng hoạt động
                                    option(value="delete") Xóa 
                                    option(value="change-position") Thay đổi vị trí 
                            .form-group
                                input(
                                    type="text"
                                    name="ids" 
                                    value="" 
                                    class="form-control d-none" 
                                )
                                //- luu trong id thay vi url vi cai nay se co nhieu
                                //- trong khi do url se chi lay acc url co trong dtb, viec nay giup toi uu hon
                                //-day la 1 trong cac cach truyen len be, form kia cug co the dug cach nay
                            button(type="submit" class="btn btn-primary") Áp dụng
                            //- the name tuong ung voi formdata trong network(du lieu gui len) 
                .col-4
                    a(
                    href=`${prefixAdmin}/products/create`
                    class="btn btn-outline-success"
                    ) + Thêm mới

            table(
                class= "table table-hover table-sm"
                checkbox-multi
                )
                thead
                    tr
                        th
                            input(type="checkbox" name="checkall")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Vị trí
                        th Trạng thái
                        th Hành động
                tbody
                    each item,index in products
                        tr
                            td
                                input(type="checkbox"
                                name="id"
                                value=item.id
                                )
                            td #{index + 1}
                            td
                                img(
                                src=item.thumbnail,
                                alt=item.title,
                                width="100px"
                                height="auto"
                                )
                            td #{item.title}
                            td #{item.price}$
                            td
                                input(
                                    type="number"
                                    value=item.position
                                    style="width: 60px"
                                    min="1"
                                    name="position"
                                    )
                            td
                                if item.status == "active"
                                    a(
                                        href="javascript:;" 
                                        button-change-status
                                        status=item.status
                                        id=item.id
                                        class="badge badge-success") Hoạt động
                                else 
                                    a(href="javascript:;" 
                                        button-change-status
                                        status=item.status
                                        id=item.id
                                        class="badge badge-danger") Dừng hoạt động
                            td
                                a(class="btn btn-secondary btn-sm" href=`${prefixAdmin}/products/detail/${item.id}`) Chi tiết
                                a(class="btn btn-warning btn-sm" href=`${prefixAdmin}/products/edit/${item.id}`) Sửa
                                button(class="btn btn-danger btn-sm ml-1"
                                data-id=item.id
                                button-delete
                                ) Xóa
                //- tr
                //-     td 2
                //-     td
                //-         img(
                //-         src="https://cdn.tgdd.vn/News/1560769/tai-sao-khong-co-iphone-9--cau-hoi-ma-bao-nguoi-1-800x450.jpg"
                //-         alt="Sản phẩm 2"
                //-         width="100px"
                //-         height="auto"
                //-         )
                //-     td Sản phẩm 2
                //-     td 150$
                //-     td
                //-         a(href="#" class="badge badge-danger") Dừng hoạt động
                //-     td
                //-         button(class="btn btn-warning btn-sm") Sửa
                //-         button(class="btn btn-danger btn-sm ml-1") Xóa
    nav
        ul(class="pagination")
            if(pagination.currentPage!=1)
                li(class="page-item")
                    button(class="page-link" button-pagination=1) <<
            if(pagination.currentPage>1)
                li(class="page-item")
                    button(class="page-link" button-pagination=pagination.currentPage-1) <
            -   for(var i=1;i<=pagination.total;i++)  
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                    button(
                        class="page-link" 
                        button-pagination=i
                        ) #{i}
            if(pagination.currentPage<pagination.total)
                li(class="page-item")
                    button(class="page-link" button-pagination=(Number(pagination.currentPage)+1)) >
                li(class="page-item")
                    button(class="page-link" button-pagination=pagination.total) >>
    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/products/change-status`
        ) 
    form(
        action=""
        method="POST"
        id="delete-status"
        data-path=`${prefixAdmin}/products/delete-status`
        ) 
    script(src="/admin/js/products.js")  