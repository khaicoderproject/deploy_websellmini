extends ../../layouts/default
include ../../mixins/filterStatus
include ../../mixins/search
include ../../mixins/alert
include ../../mixins/sort
include ../../mixins/changemulti
include ../../mixins/pagination
block main
    +success(5000)
    +error(5000)
    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
            .row
                .col-6
                    +button-status(filterStatus)                   
                .col-6
                    +search(keyword)

    +sort()

    .card.mb-3
        .card-header Danh sách
        .card-body
            .row
                .col-8
                    form(
                        action=`${prefixAdmin}/products/change-multi?_method=PATCH` 
                        method="POST"
                        form-change-multi
                    )
                        .d-flex.align-items-start
                            +changemulti()
                            //- the name tuong ung voi formdata trong network(du lieu gui len) 
                .col-4
                    a(
                    href=`${prefixAdmin}/products/create`
                    class="btn btn-outline-success"
                    ) + Thêm mới

            table(
                class= "table table-hover table-sm"
                checkbox-multi
                )
                thead
                    tr
                        th
                            input(type="checkbox" name="checkall")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Vị trí
                        th Trạng thái
                        th Hành động
                tbody
                    each item,index in products
                        tr
                            td
                                input(type="checkbox"
                                name="id"
                                value=item.id
                                )
                            td #{pagination.limit*(pagination.currentPage-1)+(index + 1)}
                            td
                                img(
                                src=item.thumbnail,
                                alt=item.title,
                                width="100px"
                                height="auto"
                                )
                            td #{item.title}
                            td #{item.price}$
                            td
                                input(
                                    type="number"
                                    value=item.position
                                    style="width: 60px"
                                    min="1"
                                    name="position"
                                    )
                            td
                                if item.status == "active"
                                    a(
                                        href="javascript:;" 
                                        button-change-status
                                        status=item.status
                                        id=item.id
                                        class="badge badge-success") Hoạt động
                                else 
                                    a(href="javascript:;" 
                                        button-change-status
                                        status=item.status
                                        id=item.id
                                        class="badge badge-danger") Dừng hoạt động
                            td
                                a(class="btn btn-secondary btn-sm" href=`${prefixAdmin}/products/detail/${item.id}`) Chi tiết
                                a(class="btn btn-warning btn-sm" href=`${prefixAdmin}/products/edit/${item.id}`) Sửa
                                button(class="btn btn-danger btn-sm ml-1"
                                data-id=item.id
                                button-delete
                                ) Xóa
                //- tr
                //-     td 2
                //-     td
                //-         img(
                //-         src="https://cdn.tgdd.vn/News/1560769/tai-sao-khong-co-iphone-9--cau-hoi-ma-bao-nguoi-1-800x450.jpg"
                //-         alt="Sản phẩm 2"
                //-         width="100px"
                //-         height="auto"
                //-         )
                //-     td Sản phẩm 2
                //-     td 150$
                //-     td
                //-         a(href="#" class="badge badge-danger") Dừng hoạt động
                //-     td
                //-         button(class="btn btn-warning btn-sm") Sửa
                //-         button(class="btn btn-danger btn-sm ml-1") Xóa
    +pagination(pagination)
    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/products/change-status`
        ) 
    form(
        action=""
        method="POST"
        id="delete-status"
        data-path=`${prefixAdmin}/products/delete-status`
        ) 
    script(src="/admin/js/products.js")  