mixin success(time)
    - if (messages.success)
        .message.info
            div(
                class="alert alert-success"
                show-alert
                data-time=time
            )   #{messages.success} <span close-alert> x </span>

mixin error(time)
    - if (messages.error)
        .message.info
            div(
                class="alert alert-danger"
                show-alert
                data-time=time
            )   #{messages.error} <span close-alert> x </span>