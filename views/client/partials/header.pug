include ../mixins/sub-menu
header.header
    div #{newRecords}
    .container 
        .row.align-items-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src="/img/logo.png",alt="logo")
            .col-5
                form(action="/search" method="GET")
                    div(class="form-group d-flex mb-0")
                        input(type="text" placeholder="Nhập từ khóa..." class="form-control" name="keyword")
                        button(type="submit" class="btn btn-primary") Tìm

            .col-4 
                .inner-menu 
                    ul 
                        li
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const path= `/products`
                            a(href="/products") Sản phẩm
                            +sub-menu(layoutCategory,path)
                        li
                            a(href="/cart") Giỏ hàng(#{totalQuantity})
                        if(user)
                            li 
                                a(href="/user/info") Xin chào #{user.fullName}
                            li 
                                a(href="/user/logout") Đăng Xuất 
                        else
                            li 
                                a(href="/user/login") Đăng Nhập   
                            li 
                                a(href="/user/register") Đăng Ký   
                          
                            
                            
                            
                            
                            
                            
                            
                            
                            
